<!-- EditView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:with field="cnt" type="cbmarc.ginvoicing.client.i18n.AboutConstants"/>
    
	<ui:style>
	.about {
		padding: 0 1em;
	}
	
	.about p {
		color: #000;
	}
	</ui:style>
    
	<g:HTMLPanel styleName="{style.about}">
	
	<h2>Ginvoicing - Invoicing system</h2>
	<h3><g:HTML text="{cnt.overview}" /></h3>
	<p><g:HTML text="{cnt.overviewDescription}" /></p>
	
	<h3><g:HTML text="{cnt.sources}" /></h3>
	<p><g:HTML text="{cnt.sourcesDescription}" /><a href="http://code.google.com/p/ginvoicing">code.google.com/p/ginvoicing</a></p>
	
	</g:HTMLPanel>

</ui:UiBinder>