<!-- LoadingPanel.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:with field="res" type="cbmarc.ginvoicing.client.ui.Resources"/>
	<ui:with field="cnt" type="cbmarc.ginvoicing.client.i18n.CategoriesConstants"/>
    
	<g:VerticalPanel ui:field="loadingPanel" styleName="loadingPanel" visible="false" width="100%">
		<g:cell horizontalAlignment='ALIGN_RIGHT'>
			<g:HorizontalPanel spacing="10">
				<g:cell verticalAlignment="ALIGN_MIDDLE"><g:Image resource="{res.loadingIcon}" /></g:cell>
				<g:cell><g:Label text="{cnt.loading}" /></g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder>