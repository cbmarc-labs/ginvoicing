<!-- View.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:with field="cnt" type="cbmarc.ginvoicing.client.i18n.AppConstants"/>

	<ui:style>
	.langTab {
		cursor: pointer;
		cursor: hand;
	}
	</ui:style>

	<g:HTMLPanel>
	
	<g:VerticalPanel styleName="tabPanel">
		<g:cell horizontalAlignment='ALIGN_RIGHT'>
			<g:HTMLPanel>
			
				<g:Anchor styleName="{style.langTab}" ui:field="LangCA">Català</g:Anchor>&nbsp;|&nbsp;
				<g:Anchor styleName="{style.langTab}" ui:field="LangES">Español</g:Anchor>&nbsp;|&nbsp;
				<g:Anchor styleName="{style.langTab}" ui:field="LangEN">English</g:Anchor>&nbsp;|&nbsp;
				<g:Anchor styleName="{style.langTab}" ui:field="LangFR">Français</g:Anchor>&nbsp;
				
			</g:HTMLPanel>				
		</g:cell>
	</g:VerticalPanel>
  
	<div id="header-wrapper">
		<div id="header">
			GInvoicing - Invoicing system
		</div>
	</div>
	
	<div id="container">
		<div id="center" class="column"> 
		
			<g:VerticalPanel styleName="tabPanel">
				<g:HorizontalPanel>
				
				<g:Hyperlink ui:field="invoicesTab" styleName="tabItem" targetHistoryToken="main/invoices" text="{cnt.menuInvoices}"></g:Hyperlink>
				<g:Hyperlink ui:field="customersTab" styleName="tabItem" targetHistoryToken="main/customers" text="{cnt.menuCustomers}"></g:Hyperlink>
				<g:Hyperlink ui:field="productsTab" styleName="tabItem" targetHistoryToken="main/products" text="{cnt.menuProducts}"></g:Hyperlink>
				<g:Hyperlink ui:field="categoriesTab" styleName="tabItem" targetHistoryToken="main/categories" text="{cnt.menuCategories}"></g:Hyperlink>
				
				</g:HorizontalPanel>
			</g:VerticalPanel>
			
			<g:HorizontalPanel ui:field="content" width="100%" />
		</div>
				
		<div id="left" class="column"></div>
		<div id="right" class="column"></div>
	</div>
	
	<div id="footer-wrapper">
		<div id="footer">-= ginvoicing =-</div>
	</div>

  </g:HTMLPanel>
  
</ui:UiBinder>