<!-- EditView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
  <ui:with field="cnt" type="cbmarc.ginvoicing.client.i18n.ProductsConstants"/>
  
  <g:HTMLPanel styleName="content">
  
  <g:VerticalPanel styleName="toolbarPanel">
  	<g:HorizontalPanel spacing="5">
		<g:Button ui:field="listButton" text="{cnt.listButton}" />
  	</g:HorizontalPanel>
  </g:VerticalPanel>

  <g:VerticalPanel styleName="formPanel">
  	<g:HTMLPanel>
  	
		<table>
		<tr><td><g:Label text="{cnt.formName}" /></td><td><g:TextBox ui:field="name" /></td></tr>
		<tr><td><g:Label text="{cnt.formDescription}" /></td><td><g:TextBox ui:field="description" width="20em" /></td></tr>
		<tr><td><g:Label text="{cnt.formCategory}" /></td><td><table style="border-collapse:collapse;"><tr><td><g:ListBox ui:field="categoryList" /></td><td><g:Label ui:field="categoryDescription" /></td></tr></table></td></tr>
		<tr><td><g:Label text="{cnt.formPrice}" /></td><td><g:TextBox ui:field="price" width="5em" /></td></tr>
		</table>

  	</g:HTMLPanel>
  </g:VerticalPanel>

	<g:VerticalPanel styleName="buttonsPanel">
  		<g:HorizontalPanel spacing="5">
			<g:Button ui:field="submitButton" text="{cnt.submitButton}" />
			<g:Button ui:field="cancelButton" text="{cnt.cancelButton}" />
			<g:Button ui:field="resetButton" text="{cnt.resetButton}" />
		</g:HorizontalPanel>
	</g:VerticalPanel>

  </g:HTMLPanel>

</ui:UiBinder>