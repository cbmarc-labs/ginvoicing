<!-- CategoriesSelectView.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ginvoicing="urn:import:cbmarc.ginvoicing.client.ui">

  <ui:style>
	.content {
		padding: 10px;
		background: #eee;
	}
	
	.table {
		width: 100%;
		background: #eee;
		text-align: left;
	}
	
	.listHeader {
		width: 100%;
		text-align: right;
	}
	
	.listFooter {
		width: 100%;
		background: #ddd;
	}
	
	.flexTableHeader {
		background: #f00;
	}
  </ui:style>
  
  <g:HTMLPanel styleName="{style.content}">
  	<div class="toolbar">
  		<g:FlowPanel>
  			<g:Button ui:field="cancelButton" text="Cancel" />
  		</g:FlowPanel>
  	</div>
	
	<g:VerticalPanel width="100%">
		<g:HorizontalPanel styleName="{style.listHeader}">
			<g:cell horizontalAlignment='ALIGN_RIGHT'>
				<g:Label ui:field="listheaderLabel" />			
			</g:cell>
		</g:HorizontalPanel>
		
		<ginvoicing:CFlexTable ui:field="table" styleName="{style.table}" />
  		<g:Label text="No data." visible="false" ui:field="nodataLabel"></g:Label>
  		
		<g:HorizontalPanel styleName="{style.listFooter}">
			<g:cell horizontalAlignment='ALIGN_RIGHT'>
				<g:Label ui:field="listfooterLabel" />			
			</g:cell>
		</g:HorizontalPanel>
  	</g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>