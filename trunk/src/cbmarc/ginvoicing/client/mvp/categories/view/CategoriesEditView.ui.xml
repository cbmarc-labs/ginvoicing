<!-- Edit View.ui.xml -->
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui' 
    xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

  <ui:style>
	.content {
		padding: 10px;
		background: #eee;
	}
	
	.table {
		width: 100%;
		background: #fff;
		text-align: left;
		border: 1px solid #000;
	}
	
	.menuPanel {
		margin: 10px 0;
	}
  </ui:style>
  
  <g:HTMLPanel styleName="{style.content}">
  
  	<div class="toolbar">
  		<g:FlowPanel>
  			<g:Button ui:field="listButton" text="View" />
  		</g:FlowPanel>
  	</div>
	
  	<g:VerticalPanel width="100%">
		<g:HTMLPanel width="100%">

			<table>
			<tr><td>Name :</td><td><g:TextBox ui:field="name" /></td></tr>
			<tr><td>Description :</td><td><g:TextBox ui:field="description" /></td></tr>
			</table>

		</g:HTMLPanel>
  	</g:VerticalPanel>

	<g:HorizontalPanel ui:field="menuPanel" styleName="{style.menuPanel}">
		<g:Button ui:field="submitButton" text="Submit" />
		<g:Button ui:field="cancelButton" text="Cancel" />
	</g:HorizontalPanel>

  </g:HTMLPanel>

</ui:UiBinder>